{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <h1 class="text-center text-danger">Bienvenue sur la page vous présentant les employées de la société Deloitte! ✅</h1>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">id</th>
            <th scope="col">Nom</th>
            <th scope="col">Prenom</th>
            <th scope="col">Email</th>
            <th scope="col">Secteur </th>
            <th scope="col">Photo</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody >
        {% for employe in employees %}
            {% if employe.secteur == 'Informatique' %}
                <tr class="bg-primary">
            {% elseif employe.secteur == 'Comptabilité'%}
                <tr class="bg-success">
            {% elseif employe.secteur == 'Secrétaire' %}
                <tr class="bg-warning">
            {% else %}
                <tr class="bg-danger">
            {%  endif %}
                    <th scope="row"> {{ employe.id }}</th>
                    <td>{{ employe.nom }}</td>
                    <td>{{ employe.prenom }}</td>
                    <td>{{ employe.email }}</td>
                    <td>{{ employe.secteur }}</td>
                    <td><img src="{{ asset('images/employees/'~ employe.photo) }}" style="width: 100px" alt="Pas d'image dispo "> </td>
                    <td>
                        <a class="btn btn-danger" href="{{ path('delete_employe',{'employe':employe.id}) }}"> Supprimer</a>
                    </td>

                </tr>
        {% endfor %}

        </tbody>
    </table>


</div>
{% endblock %}
